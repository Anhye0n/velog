<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>로그인</title>
    <% if (locals.user === undefined){ %>

    <% }else{ %>
        <script>alert('로그인 되었습니다.');
            location.href = 'http://anhye0n.me/';</script>
    <% } %>
    <link rel="stylesheet" href="/src/css/main.css">
    <link rel="stylesheet" href="/src/css/login.css">
    <link rel="stylesheet" href="/src/css/font.css">
    <script type="text/javascript">
        function pass_check() {
            var register_form = document.getElementById('register_form');
            var p1 = document.getElementById('pass_check_1').value
            var p2 = document.getElementById('pass_check_2').value
            if (p1 === p2) {
                // alert('비밀번호가 일치합니다.')
                register_form.submit()
            } else if (p1 !== p2) {
                alert('비밀번호가 일치하지 않습니다.')
            }
        }
    </script>
    <style>
        input:focus {
            outline: none;
        }
    </style>
</head>
<body>
<div id="login_container">
    <div id="register_box">
        <div id="logo_container">
            <img src="/src/img/favicon.png" alt="">
        </div>
        <div id="welcome_message">
            <p>Welcome!</p>
            <p>Enter your information.</p>
        </div>
        <div class="regi_form_container">
            <form id="register_form" action="/api/user/register" method="post">
                <table id="regi_form_table">
                    <tr>
                        <td><input type="text" name="user_name" placeholder="Name" autocomplete="off" required></td>
                    </tr>
                    <tr>
                        <td><input type="email" name="email" placeholder="E-mail" autocomplete="off" required></td>
                    </tr>
                    <% if(locals.err_email){ %>
                        <tr>
                            <td class="regi_error"><%= locals.err_email %></td>
                        </tr>
                    <% } %>
                    <tr>
                        <td><input type="text" name="id" placeholder="ID" autocomplete="off" required></td>
                    </tr>
                    <% if(locals.err_id){ %>
                        <tr>
                            <td class="regi_error"><%= locals.err_id %></td>
                        </tr>
                    <% } %>
                    <tr>
                        <td><input type="password" id="pass_check_1" name="password" placeholder="Password"
                                   autocomplete="off" required></td>
                    </tr>
                    <tr>
                        <td><input type="password" id="pass_check_2" placeholder="Password 확인" autocomplete="off"
                                   required></td>
                    </tr>
                </table>
                <button class="regi_button" type="button" onclick="pass_check()">S U B M I T</button>
            </form>
            <br>
        </div>
        <div id="go_to_register">
            <p>Do you already have an account? <a href="http://anhye0n.me/user/login">Go to the Login</a></p>
        </div>
    </div>
</div>
</body>
</html>